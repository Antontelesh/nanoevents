{
  "name": "nanoevents",
  "version": "1.0.8",
  "description": "Simple and tiny (101 bytes) event emitter library",
  "keywords": [
    "EventEmitter",
    "Events",
    "emit",
    "emitter",
    "event",
    "pub/sub",
    "publish",
    "reactor",
    "subscribe"
  ],
  "scripts": {
    "spellcheck": "yarn docs && yaspeller-ci *.md",
    "clean": "rimraf docs/ coverage/",
    "lint": "eslint-ci *.js test/*.js",
    "docs": "documentation build *.js -f md -o api.md",
    "test": "jest --coverage && yarn lint && size-limit && yarn spellcheck"
  },
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "repository": "ai/nanoevents",
  "engines": {
    "node": ">=4.0.0"
  },
  "devDependencies": {
    "@logux/eslint-config": "^28.1.0",
    "clean-publish": "^1.1.2",
    "documentation": "^10.0.0",
    "eslint": "^5.16.0",
    "eslint-ci": "^1.0.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-es5": "^1.3.1",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-import-helpers": "^0.1.4",
    "eslint-plugin-jest": "^22.5.0",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^2.1.0",
    "jest": "^24.7.1",
    "lint-staged": "^8.1.5",
    "rimraf": "^2.6.3",
    "size-limit": "^1.1.2",
    "yaspeller-ci": "^1.0.0"
  },
  "size-limit": [
    {
      "path": "index.js",
      "limit": "101 B"
    }
  ],
  "jest": {
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.md": "yaspeller-ci",
    "*.js": "eslint"
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config/browser",
    "rules": {
      "no-invalid-this": "off"
    }
  },
  "yaspeller": {
    "lang": "en",
    "ignoreCapitalization": true,
    "dictionary": [
      "JSDoc",
      "NanoEvents",
      "EventEmitter",
      "js",
      "Versioning",
      "gzipped",
      "unbindAll",
      "Deryabin",
      "Anton",
      "Khlynovskiy",
      "npm",
      "GMT",
      "Tue",
      "Thu",
      "Fri",
      "Oct",
      "Vladlen",
      "Grachev"
    ]
  }
}
