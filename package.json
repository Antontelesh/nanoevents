{
  "name": "nanoevents",
  "version": "1.0.5",
  "description": "Simple and tiny (117 bytes) event emitter library",
  "keywords": [
    "EventEmitter",
    "Events",
    "emit",
    "emitter",
    "event",
    "pub/sub",
    "publish",
    "reactor",
    "subscribe"
  ],
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "repository": "ai/nanoevents",
  "engines": {
    "node": ">=4.0.0"
  },
  "devDependencies": {
    "clean-publish": "^1.0.7",
    "eslint": "^5.1.0",
    "eslint-ci": "^0.1.1",
    "eslint-config-logux": "^23.0.4",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-es5": "^1.3.1",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-jest": "^21.18.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^3.1.0",
    "jest": "^23.4.1",
    "jsdoc": "^3.5.5",
    "lint-staged": "^7.2.0",
    "pre-commit": "^1.2.2",
    "rimraf": "^2.6.2",
    "size-limit": "^0.18.5",
    "yaspeller-ci": "^1.0.0"
  },
  "scripts": {
    "lint-staged": "lint-staged",
    "spellcheck": "yarn docs && yaspeller-ci *.md docs/*.html",
    "clean": "rimraf docs/ coverage/",
    "lint": "eslint-ci *.js test/*.js",
    "docs": "jsdoc -d docs *.js",
    "test": "jest --coverage && yarn lint && size-limit && yarn spellcheck"
  },
  "pre-commit": [
    "lint-staged"
  ],
  "size-limit": [
    {
      "path": "index.js",
      "limit": "117 B"
    }
  ],
  "jest": {
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    }
  },
  "lint-staged": {
    "*.md": "yaspeller-ci",
    "*.js": "eslint"
  },
  "eslintConfig": {
    "extends": "eslint-config-logux/browser",
    "rules": {
      "no-invalid-this": "off"
    }
  },
  "yaspeller": {
    "lang": "en",
    "ignoreCapitalization": true,
    "excludeFiles": [
      "docs/*.js.html"
    ],
    "dictionary": [
      "JSDoc",
      "NanoEvents",
      "EventEmitter",
      "js",
      "cb",
      "Versioning",
      "gzipped",
      "unbindAll",
      "Deryabin",
      "Anton",
      "Khlynovskiy",
      "npm",
      "GMT",
      "Tue"
    ]
  }
}
