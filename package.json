{
  "name": "nanoevents",
  "version": "2.0.0",
  "description": "Simple and tiny (101 bytes) event emitter library",
  "keywords": [
    "EventEmitter",
    "Events",
    "emit",
    "emitter",
    "event",
    "pub/sub",
    "publish",
    "reactor",
    "subscribe"
  ],
  "scripts": {
    "api": "documentation build *.js -f md -o api.md",
    "spell": "yarn api && yaspeller-ci *.md",
    "clean": "rimraf api.md coverage/",
    "test": "jest --coverage && eslint-ci . && size-limit && yarn spell"
  },
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "repository": "ai/nanoevents",
  "engines": {
    "node": ">=4.0.0"
  },
  "devDependencies": {
    "@logux/eslint-config": "^29.1.1",
    "@logux/sharec-config": "^0.3.0",
    "clean-publish": "^1.1.2",
    "documentation": "^12.0.3",
    "eslint": "^6.1.0",
    "eslint-ci": "^1.0.0",
    "eslint-config-standard": "^13.0.1",
    "eslint-plugin-es5": "^1.4.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-import-helpers": "^1.0.2",
    "eslint-plugin-jest": "^22.13.6",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^3.0.1",
    "jest": "^24.8.0",
    "lint-staged": "^9.2.0",
    "rimraf": "^2.6.3",
    "size-limit": "^1.3.7",
    "yaspeller-ci": "^1.0.1"
  },
  "size-limit": [
    {
      "path": "index.js",
      "limit": "101 B"
    }
  ],
  "jest": {
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.md": "yaspeller-ci",
    "*.js": "eslint"
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config/browser",
    "rules": {
      "no-invalid-this": "off"
    }
  },
  "eslintIgnore": [
    "node_modules"
  ],
  "yaspeller": {
    "lang": "en",
    "ignoreCapitalization": true,
    "ignoreText": [
      " \\(by [^)]+\\)."
    ],
    "dictionary": [
      "EventEmitter",
      "gzipped",
      "Interfac",
      "js",
      "JSDoc",
      "NanoEvents",
      "npm",
      "unbindAll",
      "Versioning"
    ]
  },
  "sharec": {
    "version": "0.3.0"
  }
}
